@model List<Project_ON_MVC.Models.Tracking>

<style>
    .container-12 {
        margin-left: 35%;
        margin-top: 50px;
        margin-right: 20%;
        width: 420px;
        background-color: ghostwhite;
        font-family: Courier New, Courier, monospace;
        padding: 20px;
    }
</style>
<body style="background-image: url('/Images/update.jpg'); background-size: cover;">


    <div class=".container-12" style="background-color: #8ebcdb; margin-top:5%">

        <h2 style="text-align:center;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;font-display:block;"><b>ORDERS </b></h2>
        <table class="table table-bordered .thead-light" style="background-color:lightgray">
            <thead style="background-color:indianred">
                <tr>
                    <th>
                        TRACKING ID
                    </th>
                    <th>
                        SOURCE
                    </th>
                    <th>
                        DESTINATION
                    </th>
                    <th>
                        ORDER STATUS
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tracking_Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order_Details.Order_Source)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order_Details.Order_Destination)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order_Status)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
     <div style="height:50px;"></div>
</body>