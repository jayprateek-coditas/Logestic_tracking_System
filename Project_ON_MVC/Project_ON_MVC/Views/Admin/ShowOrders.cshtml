@model IEnumerable<Project_ON_MVC.Models.Order_Details>


<body class="admin-div">
    <div class="bg-image h-100" style="background-color: #8ebcdb; margin-top:5%">
    <table class="table .thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ship_ID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Order_Valuation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Destination)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Total_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment.Company.Company_Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ship_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Valuation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Destination)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Total_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Time)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Shipment.Company.Company_Name)
                </td>

            </tr>
        }

    </table>
        </div>
</body>